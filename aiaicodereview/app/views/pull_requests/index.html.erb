<div class="w-full max-w-4xl">
  <h1 class="text-3xl font-bold mb-6">Pull Requests</h1>
  
  <div class="mb-8 p-4 bg-white rounded-lg shadow-md">
    <form action="<%= pull_requests_path %>" method="post" class="flex gap-2">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input 
        type="text" 
        name="pull_request[link]" 
        placeholder="Enter pull request link"
        class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
      <button 
        type="submit"
        class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        Add Pull Request
      </button>
    </form>
  </div>

  <div class="space-y-6">
    <% @pull_requests.each do |pr| %>
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
        <div class="mb-4">
          <h2 class="text-xl font-semibold mb-2">
            <a href="<%= pull_request_path(pr) %>" class="text-blue-600 hover:text-blue-800">
              <%= pr.link %>
            </a>
          </h2>
          <p class="text-sm text-gray-500">
            Created: <%= pr.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>

        <% if pr.comments.any? %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <h3 class="text-lg font-semibold mb-3 text-gray-800">AI Review Comments</h3>
            <% pr.comments.each do |comment| %>
              <div class="bg-gray-50 rounded-lg p-4 mb-4 border border-gray-100">
                <div class="prose prose-sm max-w-none markdown-content">
                  <%= render_markdown(comment.content) %>
                </div>
                <p class="text-xs text-gray-400 mt-3">
                  Review generated: <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-gray-500 italic">Review in progress...</p>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @pull_requests.empty? %>
      <div class="text-center py-12 text-gray-500">
        <p>No pull requests yet. Add one above to get started!</p>
      </div>
    <% end %>
  </div>
</div>